<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ===================== -->
    <!-- Tema principal do App -->
    <!-- ===================== -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Cor principal -->
        <item name="colorPrimary">#00BFA6</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#00BFA6</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#00BFA6</item>

        <!-- Ãcones claros na barra (fundo escuro/colorido) -->
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Desliga contraste automÃ¡tico (API 29+) -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>

        <!-- Compatibilidade React Native -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>

    </style>

    <!-- ===================== -->
    <!-- Splash Screen (Android 12+) -->
    <!-- ===================== -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">

        <!-- Fundo do splash -->
        <item name="windowSplashScreenBackground">#00BFA6</item>

        <!-- Ãcone animado -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen_logo</item>

        <!-- ðŸ”¥ FORÃ‡A cores da system UI no splash -->
        <item name="android:statusBarColor">#00BFA6</item>
        <item name="android:navigationBarColor">#00BFA6</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- ApÃ³s o splash, volta para o tema principal -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <!-- PreferÃªncia de exibiÃ§Ã£o do Ã­cone -->
        <item name="android:windowSplashScreenBehavior">icon_preferred</item>

    </style>

</resources>
